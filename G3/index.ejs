<% include header %>
<div class="nr">           
	<div id="text"></div>
	<img src="?" style="width:100%;height:300px;" id='banner'/>
</div>
<br>
<style>
	body{position:relative;}
	.nr{width:100%;height:300px; position:relative; overflow:hidden;}
	.nr div{position:absolute; line-height:300px; text-align:center;}  
	#text{
  		width:100%;
  		height:300px;
	}
</style>

<div class="panel-group" id="accordion">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1>
                Search
            </h1>
        </div>
        <div id="collapseOne" class="panel-collapse collapse in">
            <div class="panel-body">
                <form method="get" action="/map">
                    <div class="form-group">
                        <h4>Car ID</h4>
                        <input class="form-control" name="id" placeholder="Enter Car ID">
                    </div>
                    <div class="form-group">
                        <h4>Start Time</h4>
                        <span>
                          <label>Month</label>
                          <select name="smonth">
                            <script type="text/javascript">
                              for (var i=1;i<=12;i++)
                                document.write("<option value="+i+">"+i+"</option>");
                            </script>
                          </select>
                        </span>
                        <span>
                          <label>Day</label>
                          <select name="sday">
                            <script type="text/javascript">
                              for (var i=1;i<=31;i++)
                                document.write("<option value="+i+">"+i+"</option>");
                            </script>
                          </select>
                        </span>
                        <span>
                          <label>Hour</label>
                          <select name="shour">
                            <script type="text/javascript">
                              for (var i=1;i<=23;i++)
                                document.write("<option value="+i+">"+i+"</option>");
                            </script>
                          </select>
                        </span>
                      </div>
                      <div class="form-group">
                          <h4>End Time</h4>
                          <span>
                            <label>Month</label>
                            <select name="emonth">
                              <script type="text/javascript">
                                for (var i=1;i<=12;i++)
                                  document.write("<option value="+i+">"+i+"</option>");
                              </script>
                            </select>
                          </span>
                          <span>
                            <label>Day</label>
                            <select name="eday">
                              <script type="text/javascript">
                                for (var i=1;i<=31;i++)
                                  document.write("<option value="+i+">"+i+"</option>");
                              </script>
                            </select>
                          </span>
                          <span>
                            <label>Hour</label>
                            <select name="ehour">
                              <script type="text/javascript">
                                for (var i=1;i<=24;i++)
                                  document.write("<option value="+i+">"+i+"</option>");
                              </script>
                            </select>
                          </span>
                        </div>
                    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="panel-group" id="accordion">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1>
                Banner
            </h1>
        </div>
        <div id="collapseOne" class="panel-collapse collapse in">
            <div class="panel-body">
                <form method="get" action="/map">
                    <div class="form-group">
                        <h4>Picture</h4>
						<input type="file" id="pic" accept="image/*">
                    </div>
                    <div class="form-group">
                        <h4>Text</h4>
						<input class="form-control" style="width:50%" id="name" placeholder="Enter Text">
						<br>
						<div>
							<input type="text" class="form-control" style="width:15%" id="size" placeholder="Size">
							<br>
							<input type="text" class="form-control" style="width:15%" id="color" placeholder="Color">
							<br>
							<input type="text" class="form-control" style="width:15%" id="family" placeholder="Font Family">	
                        	<br>
						</div>
					</div>
                    <input type="button" value="Submit" class="btn btn-primary btn-lg" onclick="saveBanner();">
					<script>
						function saveBanner(){
					  		var file = document.getElementById('pic').files[0];
					 		var reader = new FileReader();
							var text = document.getElementById('text');
							var name = document.getElementById('name').value;
							var size = document.getElementById('size').value;
							var color = document.getElementById('color').value;
							var family = document.getElementById('family').value;
					  		reader.readAsDataURL(file);
					  		reader.onload = function(e)
					  		{
						 		document.getElementById('banner').src = this.result;
					  		};
					  		text.innerText = name;
							text.style.fontSize = size+"px";
							text.style.color = color;
							text.style.fontFamily = family;
						}
					</script>
                </form>
            </div>
        </div>
    </div>
</div>
<% include footer %>
